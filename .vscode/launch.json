{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debugging Tests",
			"program": "${workspaceFolder}/node_modules/jest/bin/jest",
			"args": [
				"--runInBand",
				"--config",
				"${workspaceFolder}/tests/jest.config.js"
			],
			"runtimeArgs": [
				"--trace-warnings"
			]
		}
	]
}